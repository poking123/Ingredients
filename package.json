{
  "name": "ingredients",
  "version": "1.0.0",
  "description": "Keeps tracks of ingredients and tells you what recipes you can make",
  "main": "server.js",
  "scripts": {
    "build-task:scss-compile": "node-sass-chokidar --source-map true ./assets/scss -o ./client/src/assets/css",
    "build-task:autoprefixer": "postcss ./client/src/assets/css/*.css --use autoprefixer -d ./client/src/assets/css/css",
    "sass:build": "npm-run-all -p build-task:*",
    "sass:watch": "chokidar './assets/scss/*.scss' -c 'npm run sass:build'",
    "client-install": "npm install --prefix client",
    "test": "mocha",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\" \"gulp\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build -- prefix client"
  },
  "author": "Brian Gao",
  "license": "ISC",
  "dependencies": {
    "add": "^2.0.6",
    "autoprefixer": "^9.6.0",
    "body-parser": "^1.18.3",
    "bootstrap": "^4.3.1",
    "bower": "^1.8.8",
    "chokidar-cli": "^1.2.2",
    "concurrently": "^4.1.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "gulp": "^4.0.2",
    "gulp-sass": "^4.0.2",
    "i": "^0.3.6",
    "install": "^0.12.2",
    "jquery": "^3.4.1",
    "mocha": "^5.2.0",
    "mongoose": "^5.4.6",
    "node-sass": "^4.12.0",
    "node-sass-chokidar": "^1.3.5",
    "npm": "^6.7.0",
    "npm-run-all": "^4.1.5",
    "pluralize": "^7.0.0",
    "postcss-cli": "^6.1.2",
    "react-router-dom": "^5.0.1",
    "sass": "^1.20.3",
    "semantics3-node": "0.0.3",
    "uuid": "^3.3.2",
    "yarn": "^1.13.0"
  },
  "devDependencies": {
    "gulp-clean-css": "^4.2.0"
  }
}
