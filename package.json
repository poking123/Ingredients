{
  "name": "ingredients",
  "version": "1.0.0",
  "description": "Keeps tracks of ingredients and tells you what recipes you can make",
  "main": "server.js",
  "scripts": {
    "build-task:scss-compile": "node-sass-chokidar --source-map true ./assets/scss -o ./client/src/assets/css",
    "build-task:autoprefixer": "postcss ./client/src/assets/css/*.css --use autoprefixer -d ./client/src/assets/css/css",
    "sass:build": "npm-run-all -p build-task:*",
    "sass:watch": "chokidar './assets/scss/*.scss' -c 'npm run sass:build'",
    "client-install": "npm install --prefix client",
    "test": "mocha",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "localMongo": "mongod",
    "dev": "concurrently \"npm run server\" \"npm run client\" \"gulp\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "Brian Gao",
  "license": "ISC",
  "dependencies": {
    "add": "^2.0.6",
    "autoprefixer": "^9.8.4",
    "body-parser": "^1.19.0",
    "chokidar-cli": "^1.2.3",
    "concurrently": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.6.0",
    "gulp": "^4.0.2",
    "gulp-sass": "^4.1.0",
    "install": "^0.12.2",
    "mocha": "^5.2.0",
    "mongodb": "^3.5.9",
    "mongoose": "^5.9.21",
    "node-sass": "^4.14.1",
    "node-sass-chokidar": "^1.5.0",
    "npm": "^6.14.5",
    "pluralize": "^7.0.0",
    "popper.js": "^1.16.1",
    "postcss-cli": "^6.1.3",
    "sass": "^1.26.9",
    "semantics3-node": "0.0.3",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "gulp-clean-css": "^4.3.0",
    "nodemon": "^2.0.4"
  }
}
